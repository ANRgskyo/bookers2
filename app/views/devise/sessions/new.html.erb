<div class="container">
  <div class="row">

   <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group has-icon">
      <div><label class="" for="inputEmail">Name</label></div>
      <%= f.text_field :name, autofocus: true, class: "name", id:"inputEmail"%>
    </div>

    <div class="form-group has-icon">
      <div><label class="" for="inputEmail">Password</label></div>
      <%= f.password_field :password, autocomplete: "off", class: "password", id:"inputEmail" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group has-icon">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-primary btn-base-1 mt-20", style:"color: white;" %>
    </div>
  <% end %>

    <div class="rebder-login">
    <%= render "devise/shared/links", class: "sign_up" %>
    </div>

  </div>
</div>
