
<div class="container">

   <h2>Sign up</h2>

  <div class="form-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="text-danger">
         <%= devise_error_messages! %>
        </div>

      <div class="field has-icon">
        <div><label class="" for="inputEmail">Name</label></div>
        <%= f.text_field :name, autofocus: true, class: "name", id:"unputName"%>
      </div>

      <div class="field has-icon">
        <div><label class="" for="inputEmail">Email</label></div>
        <%= f.email_field :email, class:"email", id: "inputEmail"%>
      </div>

      <div class="form-group has-icon">
        <div><label class="" for="inputEmail">Password(6 characters minimum)</label></div>
        <%= f.password_field :password, autocomplete: "off", class: "password", id:"inputPassword"%>
      </div>

      <div class="form-group has-icon">
        <div><label class="" for="inputEmail">Password confirmation</label></div>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm", id:"inputConfirmPassword"%>
      </div>

      <div class="btn-Sign-up">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>

    <% end %>
    
      <div class="render-login">
      <%= render "devise/shared/links", class: "sign_in" %>
      </div>

  </div>

</div>
