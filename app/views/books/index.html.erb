<div class="container">

 <!-- エラーメッセージ -->

 <div class="error-main ">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2 class="text-danger"><%= @book.errors.count %>件のerrorが発生しました</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 </div>


<div class="clearfix">
 <div class="row">

    <div class="col-lg-3">
      <%= render 'books/list', book: @book %>
    </div>


    <div class="col-lg-9">
       <h1>Books</h1>
       <table class="table-hover table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

         <% @books.each do |book| %>

        <tbody>
          <tr>
            <td><%= link_to user_path(book.user.id), class: "user_#{book.user.id}" do %>
             <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
             <% end %>
            </td>
            <td><%= link_to book.title, "/books/#{book.id}", class: "book_#{book.id}" %></td>
            <td><%= book.opinion %></td>
          </tr>
        </tbody>

         <% end %>
       </table>
    </div>

 </div>
</div>
</div>