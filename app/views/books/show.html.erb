
<div class="container">

<div class=clearfix">
 <div class="row">

    <div class="col-lg-3">
       <%= render 'books/list', book: @book %>
    </div>



    <div class="col-lg-9">

      <h1>Book detail</h1>

      <table class="table">
      <tr>
         <td><%= link_to user_path(@post.user.id), class: "user_#{@post.user.id}" do %>
             <%= attachment_image_tag @post.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
             <p class= "text-muted"><%= @post.user.name %></p>
             <% end %>
         </td>
         <td><div><%= @post.title %></div></td>
         <td><div><%= @post.opinion %></div></td>

         <% if @post.user == current_user %>
         <td><div><%= link_to "Edit", edit_book_path(@post.id), class: "btn btn-success btn-sm edit_book_#{@post.id}" %></div></td>
         <td><div><%= link_to "Destroy", book_path(@post.id), method: :delete, class: "btn btn-danger btn-sm destroy_book_#{@post.id}", "data-confirm" => "Are you sureï¼Ÿ" %></div></td>
         <% end %>
      </tr>
      </table>

    </div>

 </div>
</div>
</div>
