<div class="container">

<!-- エラーメッセージ -->
 <div class="row">
 <div class="col-lg-offset-3">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2 class="text-danger"><%= @book.errors.count %>件のerrorが発生しました</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 </div>
 </div>



 <div class="row">
  <div class="col-lg-6 col-lg-offset-3">

      <h1>Editing Book</h1>
      <%= form_for(@book) do |f| %>

       <div class="row">
        <label>Title</label>
        <%= f.text_field :title, class: "col-lg-12 book_title" %>
       </div>

       <div class="row">
        <label>Opinion</label>
        <%= f.text_area :opinion, class: "col-lg-12 book_body" %>
       </div>

        <div class="action row">
          <%= f.submit 'Update Book', class: "book_#{@book.id} btn btn-primary col-lg-12" %>
        </div>

    <% end %>

    <div class="action linkto-edit">
    <%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
    |
    <%= link_to "Back", books_path, class: "back" %>
    </div>

  </div>
 </div>
</div>