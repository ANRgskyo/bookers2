<div class="container">

<div class="clearfix">
 <div class="row">

    <div class="col-lg-3">
      <%= render 'books/list', book: @book %>
    </div>


    <div class="col-lg-9">
      <h1>Users</h1>

      <table class="table">

        <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
        </thead>

       <% @users.each do |user| %>

        <tbod>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show", user_path(user.id), class: "user_#{user.id}" %></td>
        </tr>
        <tbody>

       <% end %>
      </table>
    </div>

 </div>
</div>
</div>