<!DOCTYPE html>
<html>
  <head>
    <title>Kadai2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <!-- header -->

<header class="clearfix">
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-left" style="color: white;">
        <span  style="font-size: 20px;">Bookers</span>
      </div>

      <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>

            <li style="font-size: 15px;">
              <%= link_to user_path(current_user.id), class: "user_#{current_user.id}" do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              <apan class="">Home<span>
              <% end %>
            </li>
            <li style="font-size: 15px;">
              <%= link_to users_path, class: "user" do %>
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <span>User</span>
              <% end %>
            </li>
            <li style="font-size: 15px;">
              <%= link_to books_path, class: "books" do %>
              <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
              <span>Books</span>
              <% end %>
            </li>
            <li style="font-size: 15px;">
              <%= link_to destroy_user_session_path, method: :delete, class: "logout" do %>
              <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              <span>logout</span>
              <% end %>
            </li>

          <% else %>

            <li style="font-size: 15px;">
              <%= link_to root_path, class: "home" do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              <span>Home</sapn>
              <% end %>
            </li>
            <li style="font-size: 15px;">
              <%= link_to home_about_path, class: "about" do %>
              <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
              <span>About</span>
              <% end %>
            </li>
            <li style="font-size: 15px;">
              <%= link_to new_user_registration_path, class: "sign_up" do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
              <span>sign up</span>
              <% end %>
            </li>
            <li style="font-size: 15px;">
              <%= link_to new_user_session_path, class: "sign_in" do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
              <span>login</span>
              <% end %>
            </li>
          <% end %>
      </ul>
    </div>
  </nav>
</header>

  <!-- サクセスメッセージ -->
<div class="success container">
　<% flash.each do |key, value| %>
    <p class="row"><%= content_tag(:div, value, class: "#{key} text-success") %></p>
  <% end %>
</div>

    <%= yield %>

<!-- footer -->

<footer>
  <div class="container">
    <div class="pull-right">
      <p>CopyRight Infratop.inc</p>
    </div>
  </div>
</footer>

  </body>
</html>
